# =============================================================================
# STOCK SENTIMENT BACKEND - ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/stock_sentiment
MONGODB_DB_NAME=stock_sentiment
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# =============================================================================
# DATA RETENTION CONFIGURATION
# =============================================================================
# MongoDB TTL Indexes (in days)
NEWS_RETENTION_DAYS=90          # Keep news for 90 days
SENTIMENT_RETENTION_DAYS=365    # Keep sentiments for 1 year
CRAWL_SESSION_RETENTION_DAYS=30 # Keep crawl sessions for 30 days

# Redis Cache TTL (in seconds)
CACHE_TTL_SENTIMENT=900         # 15 minutes
CACHE_TTL_NEWS=3600            # 1 hour
CACHE_TTL_TRENDS_1D=1800       # 30 minutes
CACHE_TTL_TRENDS_30D=7200      # 2 hours
CACHE_TTL_TRENDS_90D=21600     # 6 hours

# =============================================================================
# SENTIMENT ANALYSIS CONFIGURATION
# =============================================================================
# Hugging Face Inference API
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=ProsusAI/finbert
SENTIMENT_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# CRAWLER CONFIGURATION
# =============================================================================
# Puppeteer Settings
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
BROWSER_POOL_SIZE=3
CRAWLER_DELAY_BETWEEN_REQUESTS=1000

# Crawling Schedule (in minutes)
PRE_CRAWL_INTERVAL=75           # 1 hour 15 minutes
MAX_STOCKS_PER_CRAWL=300
MAX_CONCURRENT_CRAWLS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000     # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# NEWS SOURCES CONFIGURATION
# =============================================================================
# MoneyControl
MONEYCONTROL_BASE_URL=https://www.moneycontrol.com
MONEYCONTROL_SEARCH_URL=https://www.moneycontrol.com/search

# Economic Times
ECONOMIC_TIMES_BASE_URL=https://economictimes.indiatimes.com
ECONOMIC_TIMES_SEARCH_URL=https://economictimes.indiatimes.com/search

# Business Standard
BUSINESS_STANDARD_BASE_URL=https://www.business-standard.com
BUSINESS_STANDARD_SEARCH_URL=https://www.business-standard.com/search

# NSE Official
NSE_BASE_URL=https://www.nseindia.com
NSE_NEWS_URL=https://www.nseindia.com/news

# BSE Official
BSE_BASE_URL=https://www.bseindia.com
BSE_NEWS_URL=https://www.bseindia.com/news

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT (if implementing authentication later)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
API_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000      # 30 seconds
HEALTH_CHECK_TIMEOUT=10000       # 10 seconds

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Alpha Vantage (if needed later)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Reddit API (if implementing community sentiment)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=StockSentimentBot/1.0

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/stock_sentiment_test
TEST_REDIS_URL=redis://localhost:6379/1

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# =============================================================================
# DEPLOYMENT (Production Only)
# =============================================================================
# SSL/TLS
SSL_KEY_PATH=
SSL_CERT_PATH=

# Load Balancer
BEHIND_PROXY=false
TRUST_PROXY=false

# =============================================================================
# NOTES:
# =============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use different values for development, staging, and production
# 4. Keep sensitive keys secure and rotate them regularly
# 5. Monitor environment variable usage in production
